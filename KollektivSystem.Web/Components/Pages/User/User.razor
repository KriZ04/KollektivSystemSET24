@page "/user"
@rendermode InteractiveServer
@using System.Security.Claims
@inject NavigationManager Nav
@inject KollektivSystem.Web.Services.AuthState Auth

@if (!_loaded)
{
    <p>Sjekker tilgang …</p>
}
else if (!_isUser)
{
    <p>Du har ikke tilgang til denne siden.</p>
}
else
{
    <h1>Brukerside</h1>
    <p>Velg hva du vil gjøre.</p>


}

@code {
    private bool _loaded;
    private bool _isUser;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _loaded)
            return;

        var claims = await Auth.GetClaimsAsync();

        string? role = null;
        if (claims != null)
        {
            if (!claims.TryGetValue(ClaimTypes.Role, out role))
                claims.TryGetValue("role", out role);
        }

        _isUser = string.Equals(role, "Customer", StringComparison.OrdinalIgnoreCase);

        _loaded = true;

        if (!_isUser)
        {
            Nav.NavigateTo("/login", replace: true);
        }

        await InvokeAsync(StateHasChanged);
    }
}