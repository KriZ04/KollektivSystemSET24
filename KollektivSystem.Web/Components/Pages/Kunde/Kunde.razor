@page "/kunde"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components
@inject NavigationManager Nav
@inject KollektivSystem.Web.Services.AuthState Auth
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@attribute [Authorize(Roles = "Customer")]

<h3 class="mb-4">Kundedashboard</h3>

<div class="container">
    <div class="row">

        
        <div class="col-12 mb-4">
            <button class="btn btn-primary w-100"
                    @onclick='() => Nav.NavigateTo("/kunde/billetter")'>
                Kjøp nye billetter her
            </button>
        </div>

        
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Aktive billetter</h5>
                    <p class="card-text text-muted">Du har for øyeblikket 0 aktive billetter.</p>

                    
                    <ul class="list-group">
                        <li class="list-group-item text-muted">Ingen aktive billetter</li>
                    </ul>
                </div>
            </div>
        </div>

        
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Rutesøk</h5>
                    <p class="card-text text-muted">Søk etter ruter mellom to stoppesteder.</p>

                    <input class="form-control mb-2" placeholder="Fra..." />
                    <input class="form-control mb-2" placeholder="Til..." />

                    <button class="btn btn-secondary w-100" disabled>
                        Søk (kommer snart)
                    </button>
                </div>
            </div>
        </div>

    </div>
</div>

@code {
    private bool _loaded;
    private bool _IsCustomer;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender || _loaded)
            return;

        var claims = await Auth.GetClaimsAsync();

        string? role = null;
        if (claims != null)
        {
            if (!claims.TryGetValue(ClaimTypes.Role, out role))
                claims.TryGetValue("role", out role);
        }

        _IsCustomer =
            !string.IsNullOrWhiteSpace(role) &&
            (role.Equals("Customer", StringComparison.OrdinalIgnoreCase));

        _loaded = true;

        if (!_IsCustomer)
        {
            Nav.NavigateTo("/login", replace: true);
        }

        StateHasChanged();
    }
}
