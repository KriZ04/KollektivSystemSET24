@page "/kunde/billetter"
@rendermode InteractiveServer
@using System.Linq
@using KollektivSystem.Web.Models
@using KollektivSystem.Web.Services
@inject ITicketApiClient TicketApi

<h3>Kjøp billett</h3>

@if (_isLoading)
{
    <p>Laster billetter...</p>
}
else if (_loadError != null)
{
    <p class="text-danger">@_loadError</p>
}
else if (_tickets.Count == 0)
{
    <p>Ingen billetter tilgjengelig.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Pris</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in _tickets)
            {
                <tr>
                    <td>@t.Type</td>
                    <td>@t.Price.ToString("0.00") kr</td>
                    <td>
                        <button class="btn btn-primary"
                                @onclick="() => PurchaseAsync(t.Id)"
                                disabled="@_isPurchasing">
                            Kjøp
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (_lastPurchase is not null)
{
    <h3>Digital billett</h3>

    <div class="card mt-3" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">@_lastPurchase.Type</h5>
            <p class="card-text">
                Pris: @_lastPurchase.Price.ToString("0.00") kr<br />
                Kjøpt: @_lastPurchase.PurchasedAtUtc.ToLocalTime().ToString("g")<br />
                Gyldig til: @_lastPurchase.ValidUntilUtc.ToLocalTime().ToString("g")
            </p>
            <p class="card-text">
                Kontrollkode:<br />
                <span style="font-size: 1.3rem; letter-spacing: 0.15rem;">
                    @_lastPurchase.Code
                </span>
            </p>
        </div>
    </div>
}

@code {
    private List<TicketDto> _tickets = new();
    private bool _isLoading;
    private bool _isPurchasing;
    private string? _loadError;
    private PurchasedTicketDto? _lastPurchase;

    protected override async Task OnInitializedAsync()
    {
        _isLoading = true;
        _loadError = null;

        try
        {
            var tickets = await TicketApi.GetTicketsAsync();
            _tickets = tickets.ToList();
        }
        catch
        {
            _loadError = "Kunne ikke laste billetter.";
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task PurchaseAsync(int ticketId)
    {
        _isPurchasing = true;

        try
        {
            var result = await TicketApi.PurchaseTicketAsync(ticketId);
            if (result is null)
            {
                _loadError = "Klarte ikke å kjøpe billetten.";
                return;
            }

            _lastPurchase = result;
        }
        finally
        {
            _isPurchasing = false;
        }
    }
}
