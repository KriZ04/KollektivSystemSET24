@page "/auth/callback"
@rendermode InteractiveServer
@using KollektivSystem.Web.Services
@inject NavigationManager Nav
@inject ITokenStore Tokens

<h3>Fullfører innlogging …</h3>

@code {
    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Nav.Uri);
        var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
        var token = query["token"];

        // Alternativt token i fragment (hvis API-et returnerer #id_token= eller #access_token=)
        if (string.IsNullOrEmpty(token) && !string.IsNullOrEmpty(uri.Fragment))
        {
            var frag = System.Web.HttpUtility.ParseQueryString(uri.Fragment.TrimStart('#'));
            token = frag["id_token"] ?? frag["access_token"];
        }

        if (!string.IsNullOrEmpty(token))
        {
            await Tokens.SetAsync(token);
            Nav.NavigateTo("/", forceLoad: true);
        }
        else
        {
            Nav.NavigateTo("/login");
        }
    }
}
