@page "/admin"
@rendermode InteractiveServer
@using System.Security.Claims
@inject NavigationManager Nav
@inject KollektivSystem.Web.Services.AuthState Auth

@if (!_loaded)
{
    <p>Sjekker tilgang …</p>
}
else if (!_hasAdminAccess)
{
    <p>Du har ikke tilgang til denne siden.</p>
}
else
{
    <h1>Admin</h1>

    <div class="admin-grid">
        <div class="card">
            <h2>Varsler</h2>
            <p>Administrer varsler som vises til kunder.</p>
            <div class="card-actions">
                <button class="btn" @onclick="OpenAlerts">Åpne varsler</button>
            </div>
        </div>

        <div class="card">
            <h2>Ruter</h2>
            <p>Administrer rutetabeller og linjer.</p>
            <div class="card-actions">
                <button class="btn" @onclick="OpenRoutes">Åpne ruter</button>
            </div>
        </div>

        <div class="card">
            <h2>Billettyper</h2>
            <p>Opprett og deaktiver billettyper.</p>
            <div class="card-actions">
                <button class="btn" @onclick="OpenTicketTypes">Åpne billettyper</button>
            </div>
        </div>
    </div>
}

@code {
    private bool _loaded;
    private bool _hasAdminAccess;

    protected override async Task OnInitializedAsync()
    {
        var claims = await Auth.GetClaimsAsync();

        string? role = null;
        if (claims != null)
        {
            if (!claims.TryGetValue(ClaimTypes.Role, out role))
                claims.TryGetValue("role", out role);
        }

        _hasAdminAccess =
            !string.IsNullOrWhiteSpace(role) &&
            (role.Equals("Admin", StringComparison.OrdinalIgnoreCase) ||
             role.Equals("SystemManager", StringComparison.OrdinalIgnoreCase));

        _loaded = true;

        if (!_hasAdminAccess)
        {
            Nav.NavigateTo("/login", replace: true);
        }
    }

    private void OpenAlerts() => Nav.NavigateTo("/admin/alerts", true);
    private void OpenRoutes() => Nav.NavigateTo("/admin/routes", true);
    private void OpenTicketTypes() => Nav.NavigateTo("/admin/ticket-types", true);
}
