﻿﻿@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components
@using System.Security.Claims
@implements IDisposable
@inject NavigationManager Nav
@inject KollektivSystem.Web.Services.AuthState Auth

<nav class="flex-column">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>

        @if (_hasAdminAccess)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="admin" Match="NavLinkMatch.Prefix">
                    <span class="oi oi-shield" aria-hidden="true"></span> Admin
                </NavLink>
            </li>
        }

        @if (_isSysUtvikler)
        {
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="sysutvikler/rolemanagment" Match="NavLinkMatch.Prefix">
                    <span class="oi oi-cog" aria-hidden="true"></span> SysUtvikler
                </NavLink>
            </li>
        }

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="kunde/billetter" Match="NavLinkMatch.Prefix">
                <span class="oi oi-credit-card" aria-hidden="true"></span> Kjøp billett
            </NavLink>
        </li>

        <li class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-key" aria-hidden="true"></span> Login
            </NavLink>
        </li>
    </ul>
</nav>

@code {
    private bool _hasAdminAccess; // Admin eller SystemManager
    private bool _isSysUtvikler;  // KUN SystemManager
    private bool _initialized;

    protected override void OnInitialized()
    {
        Nav.LocationChanged += OnLocationChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            await RefreshRoleAsync();
            StateHasChanged();
        }
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        await RefreshRoleAsync();
        StateHasChanged();
    }

    private async Task RefreshRoleAsync()
    {
        var claims = await Auth.GetClaimsAsync();

        string? role = null;
        if (claims != null)
        {
            if (!claims.TryGetValue(ClaimTypes.Role, out role))
                claims.TryGetValue("role", out role);
        }

        _hasAdminAccess =
            !string.IsNullOrWhiteSpace(role) &&
            (role.Equals("Admin", StringComparison.OrdinalIgnoreCase) ||
             role.Equals("SystemManager", StringComparison.OrdinalIgnoreCase));

        _isSysUtvikler =
            !string.IsNullOrWhiteSpace(role) &&
            role.Equals("SystemManager", StringComparison.OrdinalIgnoreCase);
    }

    public void Dispose()
    {
        Nav.LocationChanged -= OnLocationChanged;
    }
}
